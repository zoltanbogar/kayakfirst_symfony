{% trans_default_domain 'FOSUserBundle' %}

{% if form_errors(form) %}
    <div class="error-container">{{ form_errors(form) }}</div>
{% endif %}
{% if app.request.query.get("update_error") %}
    <div class="error-container">{{ app.request.query.get("update_error") }}</div>
{% endif %}

<div class="container" style="margin: 0px auto; padding: 0px 15px; max-width: 1000px;">
	<div class="row" style="margin-left: -15px; margin-right: -15px;">
		<div class="col-xs-12 col-sm-12 col-md-9">
			<div style="min-height: 55px;">
				<div>
					<div>
						<div style="color: rgba(0, 0, 0, 0.87); background-color: rgb(255, 255, 255); transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms; box-sizing: border-box; font-family: Brandon, sans-serif; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px, rgba(0, 0, 0, 0.15) 0px 1px 2px; border-radius: 2px; margin-top: 26px; margin-bottom: 26px;">
							{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'method': 'POST', 'attr': { 'class': 'fos_user_profile_edit' } }) }}
								<div style="box-sizing: border-box; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); background-color: rgb(223, 86, 38); height: 56px; padding: 0px 24px; display: flex; justify-content: space-between;">
									<div style="position: relative; display: flex; justify-content: space-between; align-items: center;">
										<div class="toolbar--left-ico">
											<svg viewBox="0 0 24 24" style="display: inline-block; color: white; fill: currentcolor; height: 24px; width: 24px; user-select: none; transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;">
												<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z">
												</path>
											</svg>
										</div>
										<span style="padding-right: 16px; line-height: initial; font-size: 16px; font-family: Brandon, sans-serif; position: relative; text-overflow: ellipsis; white-space: initial; overflow: hidden; color: white; letter-spacing: 1px;">
											{{ 'profile.edit.submit'|trans }}
										</span>
									</div>
								</div>
								<div style="padding-top: 10px; padding-bottom: 0px;">
									<div class="container" style="margin: 0px auto; padding: 15px; max-width: 1000px; line-height: 2em;">
										<div class="row" style="margin-left: -15px; margin-right: -15px;">
											<div class="col-xs-6">
												<span>{{ form_label(form.first_name) }}</span>
												{{ form_errors(form.first_name) }}
											</div>
											<div class="col-xs-6">
												<span>{{ form_widget(form.first_name) }}</span>
											</div>
										</div>
										<div class="row" style="margin-left: -15px; margin-right: -15px;">
											<div class="col-xs-6">
												<span>{{ form_label(form.last_name) }}</span>
												{{ form_errors(form.last_name) }}
											</div>
											<div class="col-xs-6">
												<span>{{ form_widget(form.last_name) }}</span>
											</div>
										</div>
										<div class="row" style="margin-left: -15px; margin-right: -15px;">
											<div class="col-xs-6">
												<span>{{ form_label(form.bodyWeight) }}</span>
												{{ form_errors(form.bodyWeight) }}
											</div>
											<div class="col-xs-6">
												<span>{{ form_widget(form.bodyWeight) }}</span>
											</div>
										</div>
										<div class="row" style="margin-left: -15px; margin-right: -15px;">
											<div class="col-xs-6">
												<span>{{ form_label(form.club) }}</span>
												{{ form_errors(form.club) }}
											</div>
											<div class="col-xs-6">
												<span>{{ form_widget(form.club) }}</span>
											</div>
										</div>
										<div class="row" style="margin-left: -15px; margin-right: -15px;">
											<div class="col-xs-6">
												<span>{{ form_label(form.artOfPaddling) }}</span>
												{{ form_errors(form.artOfPaddling) }}
											</div>
											<div class="col-xs-6">
												<span>{{ form_widget(form.artOfPaddling) }}</span>
											</div>
										</div>
										<div class="row" style="margin-left: -15px; margin-right: -15px;">
											<div class="col-xs-6">
												<span>{{ form_label(form.email) }}</span>
												{{ form_errors(form.email) }}
											</div>
											<div class="col-xs-6">
												<span>{{ form_widget(form.email) }}</span>
											</div>
										</div>
										<div class="row" style="margin-left: -15px; margin-right: -15px;">
											<div class="col-xs-6">
												<span>{{ form_label(form.password) }}</span>
												{{ form_errors(form.password) }}
											</div>
											<div class="col-xs-6">
												<span>{{ form_widget(form.password) }}</span>
											</div>
										</div>
									</div>
									<div class="form__footer" style="text-align: right; padding: 20px;">
										<div style="color: rgba(0, 0, 0, 0.87); background-color: rgb(255, 255, 255); transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms; box-sizing: border-box; font-family: Brandon, sans-serif; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); box-shadow: rgba(0, 0, 0, 0.15) 0px 1px 2px, rgba(0, 0, 0, 0.15) 0px 1px 2px; border-radius: 2px; display: inline-block; min-width: 88px;">
											<input type="submit" value="{{ 'profile.edit.submit'|trans }}" style="border: 10px; box-sizing: border-box; display: inline-block; font-family: Brandon, sans-serif; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); cursor: pointer; text-decoration: none; margin: 0px; padding: 0px; outline: none; font-size: inherit; font-weight: inherit; position: relative; z-index: 1; height: 36px; line-height: 36px; width: 100%; border-radius: 2px; transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms; background-color: rgb(223, 86, 38); text-align: center;position: relative; opacity: 1; font-size: 15px; letter-spacing: 0.5px; text-transform: uppercase; font-weight: 500; margin: 0px; user-select: none; padding-left: 16px; padding-right: 16px; color: rgb(255, 255, 255);"/>
										</div>
									</div>
								</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

